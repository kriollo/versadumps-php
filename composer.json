{
    "name": "versadumps-php/versadumps-php",
    "description": "Librería PHP moderna para enviar dumps a versaDumps Visualizer con Builder Pattern, métodos semánticos, stack traces y 10 colores predefinidos",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "debug",
        "var_dump",
        "dumps",
        "visualizer",
        "logger",
        "debugging",
        "builder-pattern",
        "semantic-methods",
        "stack-trace"
    ],
    "autoload": {
        "psr-4": {
            "Versadumps\\Versadumps\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Jorge Jara",
            "email": "jjara@wys.cl",
            "homepage": "https://github.com/kriollo"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "version": "2.2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-json": "*"
    },
    "scripts": {
        "versadumps-init": "Versadumps\\Versadumps\\Init::run",
        "cs:check": [
            "php-cs-fixer fix --dry-run --diff --ansi --config=.php-cs-fixer.dist.php"
        ],
        "cs:fix": [
            "php-cs-fixer fix --ansi --config=.php-cs-fixer.dist.php"
        ],
        "rector:check": [
            "rector process --dry-run --ansi"
        ],
        "rector:fix": [
            "rector process --ansi"
        ],
        "pint:check": "pint --test --verbose",
        "pint:fix": "pint",
        "check": [
            "@cs:check",
            "@rector:check",
            "@pint:check"
        ],
        "fix": [
            "@cs:fix",
            "@rector:fix",
            "@pint:fix"
        ]
    },
    "bin": [
        "bin/versadumps-init"
    ],
    "support": {
        "issues": "https://github.com/kriollo/versaDumps/issues",
        "source": "https://github.com/kriollo/versaDumps"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/kriollo"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.40",
        "laravel/pint": "^1.15",
        "rector/rector": "^1.0"
    }
}
