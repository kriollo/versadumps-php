{
    "name": "versadumps-php/versadumps-php",
    "description": "paquete para php para enviar dumps a versaDumps Visualizer",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "debug",
        "var_dump",
        "dumps",
        "visualizer",
        "logger"
    ],
    "autoload": {
        "psr-4": {
            "Versadumps\\Versadumps\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Jorge Jara",
            "email": "jjara@wys.cl",
            "homepage": "https://github.com/kriollo"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "symfony/yaml": "^3.4.47"
    },
    "scripts": {
        "versadumps-init": "Versadumps\\Versadumps\\Init::run",
        "cs:check": [
            "php-cs-fixer fix --dry-run --diff --ansi --config=.php-cs-fixer.dist.php"
        ],
        "cs:fix": [
            "php-cs-fixer fix --ansi --config=.php-cs-fixer.dist.php"
        ],
        "rector:check": [
            "rector process --dry-run --ansi"
        ],
        "rector:fix": [
            "rector process --ansi"
        ],
        "stan": [
            "phpstan analyse --level=9 --ansi --memory-limit=1G"
        ],
        "pint": [
            "pint check"
        ],
        "check": [
            "@cs:check",
            "@rector:check",
            "@stan",
            "@pint:check"
        ],
        "fix": [
            "@cs:fix",
            "@rector:fix",
            "@stan",
            "@pint:check"
        ]
    },
    "bin": [
        "bin/versadumps-init"
    ],
    "support": {
        "issues": "https://github.com/kriollo/versaDumps/issues",
        "source": "https://github.com/kriollo/versaDumps"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/kriollo"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.0",
        "laravel/pint": "1.0",
        "rector/rector": "0.12"
    }
}
